extends ../../layouts/dashboard

block _meta
  - var noMenu = false;
  
block content
  .row
    .col-md-4.col-md-offset-4
      .login-panel.panel.panel-default
        .panel-heading
          h3.panel-title Sign Up
        .panel-body
          form(name="regForm", role="form", ng-controller="RegisterController as registerCtrl", novalidate)
            fieldset
              .form-group(ng-class="{ 'has-error': regForm.name.$dirty && regForm.name.$invalid}")
                label Name
                input.form-control(type="text", placeholder="Average Joe", name="name", autofocus="", ng-model="user.name", required)
                div.text-danger(ng-messages="regForm.name.$dirty && regForm.name.$error")
                  div(ng-message="required") *Name is required
              .form-group
                label Email
                input.form-control(type="email", placeholder="average.joe@example.com", name="email", autofocus="", ng-model="user.email")
              .form-group
                label Password
                input.form-control(type="password", placeholder="Password", name="password", value="", ng-model="user.password", required)
              .form-group
                label Confirm Password
                input.form-control(type="password", placeholder="Retype Password", name="password_confirm", value="", ng-model="user.password_confirm", required)
              .form-group
                label Gender
                br
                label.radio-inline
                  input(type="radio", name="gender", value="male", ng-model="user.gender", required)
                  | Male
                label.radio-inline
                  input(type="radio", name="gender", value="female", ng-model="user.gender", required)
                  | Female
                label.radio-inline
                  input(type="radio", name="gender", value="other", ng-model="user.gender", required)
                  | Other
              
              // Change this to a button or input when using this as a form
              button.btn.btn-lg.btn-success.btn-block(type="submit", ng-click="regForm.$valid && registerCtrl.doRegister(user)") Register
  .row
    include ../../include/flash_messages