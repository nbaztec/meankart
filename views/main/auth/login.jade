extends ../../layouts/dashboard

block _meta
  - var noMenu = false;
  
block content
  .row
    .col-md-4.col-md-offset-4
      .login-panel.panel.panel-default
        .panel-heading
          h3.panel-title Please Sign In
        .panel-body
          form(name="loginForm", role="form", ng-controller="LoginController as loginCtrl", novalidate)
            fieldset
              .form-group
                input.form-control(type="email", placeholder="Email", name="email", autofocus="", ng-model="user.email", required)
              .form-group
                input.form-control(type="password", placeholder="Password", name="password", value="", ng-model="user.password", required)
              .checkbox
                label
                  input(type="checkbox", name="remember", value="Remember Me")
                  | Remember Me
              // Change this to a button or input when using this as a form
              button.btn.btn-lg.btn-success.btn-block(type="submit", ng-click="loginForm.$valid && loginCtrl.doLogin(user)") Login
  .row
    include ../../include/flash_messages